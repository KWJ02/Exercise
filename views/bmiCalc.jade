  script.
    function submitOn() {
      const male = document.getElementById("male");
      const female = document.getElementById("female");
      const age = document.getElementById("age");
      const height = document.getElementById("height");
      const weight = document.getElementById("weight");
      const btn = document.getElementById("btn")

      function checkInput() {
        if (age.value.trim() !== "" && height.value.trim() !== "" && weight.value.trim() !== "" && (male.checked || female.checked)) {
          btn.disabled = false;
        } else {
          btn.disabled = true;
        }
      }
      age.addEventListener("input", checkInput);
      height.addEventListener("input", checkInput);
      weight.addEventListener("input", checkInput);
      male.addEventListener("input", checkInput);
      female.addEventListener("input", checkInput);
    }

    document.addEventListener("DOMContentLoaded", function() {
      submitOn();
    });
  
  script.
    function recordBMI() {
        fetch('/checkLogin')
            .then(response => {
                if (!response.ok) {
                    throw new Error('서버 응답 오류');
                }
                return response.json();
            })
            .then(data => {
                if (data.loggedIn) {
                    document.getElementById("bmiRecordForm").submit();
                } else {
                    alert('로그인이 필요합니다.');
                }
            })
            .catch(error => {
                console.error('오류 발생:', error);
            });
    }

